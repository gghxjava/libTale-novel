{
  "name": "libtale-novel",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "packageManager": "pnpm@10.12.1",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=10.0.0"
  },
  "main": "dist-electron/main/index.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{js,ts,jsx,tsx,json,css,md}\"",
    "electron:dev": "cross-env NODE_ENV=development concurrently \"pnpm dev\" \"wait-on http://localhost:5173 && pnpm electron:compile && electron .\"",
    "electron:compile": "tsc -p tsconfig.electron.json",
    "electron:start": "cross-env NODE_ENV=development electron .",
    "electron:build": "pnpm build && electron-builder"
  },
  "dependencies": {
    "@fontsource/noto-sans-sc": "^5.0.8",
    "@heroicons/react": "^2.1.5",
    "@tailwindcss/typography": "^0.5.10",
    "clsx": "^2.1.1",
    "daisyui": "^5.0.50",
    "i18next": "^24.1.0",
    "i18next-browser-languagedetector": "^8.0.2",
    "lodash-es": "^4.17.21",
    "pdfjs-dist": "^4.0.379",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-i18next": "^15.1.1",
    "react-router-dom": "^6.28.0",
    "react-virtualized-auto-sizer": "^1.0.20",
    "react-window": "^1.8.10",
    "tailwind-merge": "^2.5.4",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/node": "^22.10.2",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.19",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "electron": "28.3.3",
    "electron-builder": "^24.13.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "postcss": "^8.4.38",
    "prettier": "^3.3.3",
    "rollup-plugin-visualizer": "^5.12.0",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2",
    "vite-electron-plugin": "^0.8.3",
    "vite-plugin-electron-renderer": "^0.14.6",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.libtale.novel",
    "productName": "LibTale Novel Reader",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "mac": {
      "category": "public.app-category.books"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
